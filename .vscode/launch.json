    "version": "0.2.0",
    "configurations": [
        /* 使用ts-node */
        {
            "name": "Run TS",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/.bin/ts-node",
            "args": [
                "--project",
                "${workspaceRoot}/tsconfig.json",
                "${file}",
            ],
        },
        {
            "name": "Debug Webpack",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/webpack/bin/webpack.js",
            "args": [
                "--project",
                "--config", 
                // "build/webpack.config.dev.js"
                "${file}"
            ],
            "env": {
                "NODE_ENV":"development"
            }
        },
        {
            "name": "Debug File",
            "type": "node",
            "request": "launch",
            "program": "${file}",
        },
        {
            "name": "Debug File2",
            "type": "node",
            "request": "launch",
            "program": "${file}",
        }
    ]
}